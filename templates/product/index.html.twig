{% extends 'base.html.twig' %}

{% block title %}Tous nos produits{% endblock %}

{% block body %}
    <div class="container-fluid js-filter">
        <div class="row ml-5 mr-5">
            <div class="col-md-3 mb-2 formDiv">
                {% include "product/partials/_filter.html.twig"  with {form: form, min: min, max: max} %}
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md navigation js-filter-pagination" >
                        {% include "product/partials/_pagination.html.twig" %}
                    </div>
                    <div class="col-md">
                        <div class="d-flex justify-content-end js-filter-sorting">
                            {% include "product/partials/_sorting.html.twig" %}                        
                        </div>
                    </div>
                </div>
                <div class="row js-filter-content">
                    {% include "product/partials/_product.html.twig" %}                 
                </div>                   
            </div>
        </div>
    </div>
{% endblock %}
