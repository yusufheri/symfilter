<a{% for attr, value  in options | merge({class : 'btn btn-primary mr-3'}) %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="float-right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fa fa-sort-down ml-1"></i>
            {% else %}
                <i class="fa fa-sort-up ml-1"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-sort ml-1"></i>
        {% endif %}
    </span>
    {{ title }}
</a>
